modules = ["python-3.11", "nodejs-20"]
[agent]
expertMode = true
integrations = ["github:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["libxcrypt"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "MergedApp Backend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "MergedApp Frontend"

[[workflows.workflow]]
name = "MergedApp Backend"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd MergedApp/backend && uvicorn main:app --host 0.0.0.0 --port 8000"

[[workflows.workflow]]
name = "MergedApp Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd MergedApp && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[userenv]

[userenv.shared]
POLL_INTERVAL = "0.25"
