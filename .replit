modules = ["python-3.11", "nodejs-20"]
[agent]
expertMode = true
integrations = ["github:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["libxcrypt"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "MergedApp Frontend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "MergedApp Backend"

[[workflows.workflow]]
name = "MergedApp Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd MergedApp && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "MergedApp Backend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd MergedApp/backend && uvicorn main:app --host 0.0.0.0 --port 8000"
waitForPort = 8000

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 33445
externalPort = 3000

[userenv]

[userenv.shared]
POLL_INTERVAL = "0.25"
BROADCASTER_MODE = "FRONTEND_ONLY"
REMOTE_API_BASE = "https://ws-trader-pulse.onrender.com"

[deployment]
build = ["sh", "-c", "pip install -r MergedApp/backend/requirements.txt"]
run = ["sh", "-c", "cd MergedApp/backend && uvicorn main:app --host 0.0.0.0 --port 80"]
deploymentTarget = "gce"
