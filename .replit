modules = ["python-3.11", "nodejs-20", "postgresql-16"]
[agent]
expertMode = true
integrations = ["github:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["libxcrypt", "postgresql"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "MergedApp Frontend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "MergedApp Backend"

[[workflows.workflow]]
name = "MergedApp Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd MergedApp && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "MergedApp Backend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd MergedApp/backend && uvicorn main:app --host 0.0.0.0 --port 8000"
waitForPort = 8000

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000

[[ports]]
localPort = 8000
externalPort = 8000

[userenv]

[userenv.shared]
POLL_INTERVAL = "0.25"
REMOTE_API_BASE = "https://ws-trader-pulse.onrender.com"

[userenv.development]
BROADCASTER_MODE = "COLLECTOR"

[deployment]
build = ["bash", "build.sh"]
run = ["bash", "-c", "cd MergedApp/backend && uvicorn main:app --host 0.0.0.0 --port 5000"]
deploymentTarget = "vm"
publicDir = "MergedApp/dist"
